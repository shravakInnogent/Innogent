datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model Employee {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  department String
  salary     Float
  joinDate   DateTime @map("join_date")
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("employees")
}
